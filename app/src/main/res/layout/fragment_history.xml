<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.weather.TodayFragmentNew">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/historyback">

        <TextView
            android:id="@+id/visitHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="访问记录:"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/firstPreferCity"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="城市待添加"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:id="@+id/backgroundPast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/round_style_white">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/line_chart_past"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="230dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/secondPreferCity"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="城市待添加"
            android:textSize="20sp">
        </TextView>
        <LinearLayout
            android:id="@+id/backgroundFuture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/round_style_white">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/line_chart_future"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="230dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/threePreferCity"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="城市待添加"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:id="@+id/backgroudThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/round_style_white">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/line_chart_three"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="230dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fourPreferCity"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="城市待添加"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:id="@+id/backgroudFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/round_style_white">

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/line_chart_four"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="230dp" />
        </LinearLayout>



    </LinearLayout>



</ScrollView>